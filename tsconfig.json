{
    "compilerOptions": {
        "target": "es6", // Вы можете оставить это значение, так как ES6 поддерживает многие функции.
        "module": "esnext", // Измените на "esnext" или "es2020" для поддержки import.meta
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "jsx": "react-jsx", // JSX для React 17+
        "lib": ["es2019", "dom"], // Библиотеки для поддержки ES6 и DOM
        "resolveJsonModule": true,
        "allowJs": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "moduleResolution": "node"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
